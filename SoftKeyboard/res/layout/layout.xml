    <unicorn.truekeyboard.KeyboardView
            android:id="@+id/numbers_keyboard"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

        <unicorn.truekeyboard.FourKey
