                android:text="vb#SPACE;"
                />

        <unicorn.truekeyboard.FourKey
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="nm#ENTER;"
                />

        <unicorn.truekeyboard.FourKey
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="\@!#SMILES;"
                />

        <unicorn.truekeyboard.FourKey
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text=".,?-"
                />
    </unicorn.truekeyboard.KeyboardView>

